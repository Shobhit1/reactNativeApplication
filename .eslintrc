{
  "parser": "babel-eslint",

  "extends": "airbnb",

  "plugins": [
    "react"
  ],

  "globals": {
    "define": true
  },

  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "classes": true,
    "defaultParams": true,
    "destructuring": true,
    "jsx": true,
    "modules": true,
    "objectLiteralShorthandMethods": true,
    "objectLiteralShorthandProperties": true,
    "restParams": true,
    "spread": true,
    "superInFunctions": true,
    "templateStrings": true
  },

  "rules": {
    "strict": [2, "global"],
    "no-unused-vars": [2],
    "no-console": 1,
    "max-len": [2, 150, 2],
    "consistent-return": 2,
    "comma-dangle": [0],
    "arrow-spacing": 2,
    "arrow-parens": [2, "always"],
    "arrow-body-style": [0],
    "semi": [2, "never"],
    "react/jsx-no-bind": [0],
    "react/prefer-stateless-function" : [0],
    "no-else-return": [0],
    "no-unused-expressions": [2, { "allowShortCircuit": true }]
  }
}
